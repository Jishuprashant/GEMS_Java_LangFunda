// package com.java;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int A = sc.nextInt();
		int B = sc.nextInt();
		int N = sc.nextInt();

		while(N>0) {
			if( N%2 != 0) {
				A *=2;
				N--;
			}
			else if( N%2 == 0) {
				B *=2;
				N--;
			}
		}
		System.out.println(A + B);
		sc.close();
	}

}
